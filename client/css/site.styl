@import url('http://fonts.googleapis.com/css?family=Lobster:400,700,900|Droid+Sans:400,700');


//General
body
	font-family 'Droid Sans'
	height 100%
	min-height 800px
	background-color rgb(249, 249, 249)
a, a:link, a:hover, a:active, a:visited, a:focus
	text-decoration none
i 
	margin 0 2px	
.404
	text-align center
	
.404 h2
	color tomato		
.wrapper
	min-height 750px
	height auto !important
  	height 100%
 	margin 0 auto -4em
input
	display block
.invisible
	display none
#forgotPassword
	display block
	margin 5px 0		
// Body main

#search
	margin 5px
	width 200px
	height 31px
.fa-search
	font-size 15px
	font-weight bold
	
.sidebar
	margin-bottom 200px
	border 2px solid #555
	border-radius 7px
	padding 40px 20px
	font-size 20px
	text-align center
	max-width 250px
	background-color white
#postajob 
	border 3px solid tomato
	font-weight bold
	font-size 22px
	margin 50px auto
	padding-top 2px
	width 143px
	height 45px
	display block
#postajob:hover
	border 5px solid tomato
.twitter
	margin-top 20px				
table
	width 95%
	
tr 
	border 2px solid #888
	border-collapse collapse
	width 100%
tr:nth-child(even)
	background-color aliceblue	
tr:nth-child(odd)
	background-color white		
tr p
	padding 5px 8px 0 5px
.date
	float right
.short-desc
	color tomato
	font-size 1.2em
	font-weight bold
	margin-left 4px
.company
	font-size 0.9em
	font-weight bold
	color black	
.live-preview .tags
	margin 0 0 2px 2px
.live-preview .location
	margin-top 5px		
.tags
	font-size 13px
	color tomato
.tags-container		
	margin-left 6px
	margin-bottom 5px
.tags:nth-child(even)
	color black
.tags:not(:last-child):after
	content ', '
.live-preview.tags:not(:last-child):after
	content ', '	
.location
	display block
	
// Post a job
.post
	max-width 500px			
.post input
	width 300px	
	display block
#location
	display block	
#submit
	width 70px
	height 50px
	border 3px solid #222
	font-weight bold
	background-color white
#submit:hover
	background-color #222
	color white
.note-editor	
	border-radius 3px	
.note-editor .note-editable
	background-color white	
.note-editor .note-toolbar
	background-color #333
	border-radius 2px
	margin-left 0px
	
.company-url
	font-size 0.9em
	margin 7px 0 10px 0
#category, .bootstrap-tagsinput
	min-width 300px
	display block
	margin-bottom 10px
.live-preview label
	display block
	margin-left 7px
	margin-right 350px
	border-bottom 1px solid black
	margin-top 35px
	font-size 1.1em
.live-preview .header
	text-align center
	font-size 22px
	margin 15px	0
.live-preview .date
	float right
	margin-right 10px	
.live-preview p
	word-wrap break-word
	margin-left 7px	
	line-height 16px
.live-preview
	h1, h2, h3, h4
		font-size 16px		
.live-preview
	background-color white
	min-height 500px
	border 3px solid #444
	border-radius 4px
	margin 50px 0 200px 0
	padding-top 25px
.live-preview .engagement
	margin-left 17px	
.company-preview
	font-size 1.2em
	display inline
	font-weight bold
	color #00001A	
input[type="radio"]
	display inline
	width 20px
label[for="engagement"]	
	display block	
label[for="tags"]	
	margin-top 11px
//end postajob

//Profile

.profile
	min-height 700px
#sendVerificationEmail
	cursor pointer
	color #22a
	margin-left 5px
//End Profile	

// Navbar
.navbar
	background-color #333
	color white
	height 90px
	min-height 66px
.remote
	color white	
.desk
	color tomato
#brand
	display block
	font-size 40px
	font-weight 200
	font-family "Lobster"
	cursor: pointer
.dropdown
	display inline-block
.dropdown-menu
	border-radius 0px
.dropdown-menu li a
	font-size 0.98em
	font-weight bold		
.navbar-right 
	margin-top 50px
	margin-right 20px
.navbar-right a
	color white
	font-size 15px		
.button
	padding 4px 7px
	cursor pointer
	font-weight bold
	height 25px
	width 85px
#register-password
	width 100%	
#showPassword, #hidePassword
	color #777	
	margin-top 2px
	font-size 13px
	cursor default
#login-buttons a	
	color white
	text-decoration none
#login-buttons a:hover
	color #333 
.button:hover, #login-buttons:hover
	border-color #333
	color #333
	background-color white 	  
.teletype
	font-weight bold
.log-reg-modal
	width 300px
	height 335px
	padding 23px
.log-reg-modal a
	cursor default
		
.log-reg-modal input[type="email"],
.log-reg-modal input[type="password"]
	width 100%
.log-reg-modal input[type="submit"]
	margin 10px 0
.log-reg-modal label
	display block
	margin 5px		
	 	 
// Navbar End â–¾
  
// Footer
.footer
	background-color white
	margin-top 80px
	height 60px
	width 100%
	
.footer a
	margin 20px
	text-align center
	display inline-block
	color tomato	
.footer-container
	border-top 1px solid grey
// Footer End	

